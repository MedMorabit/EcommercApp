<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:scaleType="centerCrop"
    android:layout_height="match_parent">

</ImageView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/RightAddressAccountTv"
            style="@style/h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:text="@string/shopingTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/tvQualityAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginQualityTxt"
            android:text="@string/subTitleQuality"
            style="@style/h2"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RightAddressAccountTv">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButtonAccountOption"
            style="@style/blueButtonStyle"
            android:layout_width="@dimen/medumButtonWidth"
            android:layout_height="@dimen/meduimButtonHeight"
            android:text="Register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tvQualityAccount"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="@id/tvQualityAccount"
            app:layout_constraintTop_toBottomOf="@id/tvQualityAccount"
            app:layout_constraintVertical_bias="0.421">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/medumButtonWidth"
            android:layout_height="@dimen/meduimButtonHeight"
            style="@style/whiteButtonStyle"
            android:id="@+id/loginButtonAccountOption"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/registerButtonAccountOption"
            app:layout_constraintStart_toStartOf="@id/registerButtonAccountOption"
            app:layout_constraintEnd_toEndOf="@id/registerButtonAccountOption"
            android:text="Login"

            >
        </androidx.appcompat.widget.AppCompatButton>



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>